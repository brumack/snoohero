{
    "manifest_version": 2,
    "name": "SnooHero",
    "version": "1.0",
    "description": "No more Reddit reload nightmares",
    "author": "Brad Rumack",
    "content_scripts": [
        {
            "matches": ["https://www.reddit.com/"],
            "js": ["app.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": ["tabs"]
}